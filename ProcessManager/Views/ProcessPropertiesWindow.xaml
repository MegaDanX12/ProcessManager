                        </Grid>
                    </GroupBox>
                    <GroupBox Header="I/O" HorizontalAlignment="Left" Height="227" VerticalAlignment="Top" Width="379" Margin="379,192,0,0" BorderBrush="Black">
                        <Grid>
                            <Label Content="{x:Static p:Resources.ProcessPropertiesWindowStatisticsTabReadsLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
                            <Label Content="{x:Static p:Resources.ProcessPropertiesWindowStatisticsTabReadBytesLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,36,0,0"/>
                            <Label Content="{x:Static p:Resources.ProcessPropertiesWindowStatisticsTabWritesLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,62,0,0"/>
                            <Label Content="{x:Static p:Resources.ProcessPropertiesWindowStatisticsTabWriteBytesLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,88,0,0"/>
                            <Label Content="{x:Static p:Resources.ProcessPropertiesWindowStatisticsTabOtherLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,114,0,0"/>
                            <Label Content="{x:Static p:Resources.ProcessPropertiesWindowStatisticsTabOtherBytesLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,140,0,0"/>
                            <Label Content="{Binding Statistics.IO.ReadCount}" VerticalAlignment="Top" Margin="80,10,10,0"/>
                            <Label Content="{Binding Statistics.IO.ReadBytes}" VerticalAlignment="Top" Margin="80,36,10,0"/>
                            <Label Content="{Binding Statistics.IO.WriteCount}" VerticalAlignment="Top" Margin="80,62,10,0"/>
                            <Label Content="{Binding Statistics.IO.WriteBytes}" VerticalAlignment="Top" Margin="80,88,10,0"/>
                            <Label Content="{Binding Statistics.IO.OtherCount}" VerticalAlignment="Top" Margin="80,114,10,0"/>
                            <Label Content="{Binding Statistics.IO.OtherBytes}" VerticalAlignment="Top" Margin="80,140,10,0"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem x:Name="ThreadTab" Header="Thread">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,10">
                    <DataGrid x:Name="ThreadsDatagrid" Margin="10,10,10,194" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" ItemsSource="{Binding Path=ThreadsInfo, Mode=OneWay}" MouseUp="ThreadsDatagrid_MouseUp" MouseRightButtonDown="ThreadsDatagrid_MouseRightButtonDown">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="TerminateThreadMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadTerminateContextMenuOption}" Command="{Binding TerminateThreadCommand}"/>
                                <MenuItem x:Name="SuspendThreadMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadSuspendContextMenuOption}" Command="{Binding SuspendThreadCommand}"/>
                                <MenuItem x:Name="ResumeThreadMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadResumeContextMenuOption}" Command="{Binding ResumeThreadCommand}"/>
                                <MenuItem x:Name="AffinitySubMenu" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadAffinityContextMenuOption}" ItemsSource="{Binding Items}" IsEnabled ="False">
                                    <MenuItem.DataContext>
                                        <viewModel:AffinityMenuVM/>
                                    </MenuItem.DataContext>
                                </MenuItem>
                                <MenuItem x:Name="WindowsMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadWindowsContextMenuOption}" Command="{Binding ShowAssociatedWindowsCommand}"/>
                                <MenuItem x:Name="PrioritySubMenu" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadPriorityContextMenuOption}">
                                    <MenuItem x:Name="TimeCriticalPriorityMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadPriorityTimeCriticalOption}" IsCheckable="True" Click="PriorityMenuItem_Click"/>
                                    <MenuItem x:Name="HighPriorityMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadPriorityHighOption}" IsCheckable="True" Click="PriorityMenuItem_Click"/>
                                    <MenuItem x:Name="AboveNormalPriorityMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadPriorityAboveNormalOption}" IsCheckable="True" Click="PriorityMenuItem_Click"/>
                                    <MenuItem x:Name="NormalPriorityMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadPriorityNormalOption}" IsCheckable="True" Click="PriorityMenuItem_Click"/>
                                    <MenuItem x:Name="BelowNormalPriorityMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadPriorityBelowNormalOption}" IsCheckable="True" Click="PriorityMenuItem_Click"/>
                                    <MenuItem x:Name="LowPriorityMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadPriorityLowOption}" IsCheckable="True" Click="PriorityMenuItem_Click"/>
                                    <MenuItem x:Name="IdlePriorityMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowThreadPriorityIdleOption}" IsCheckable="True" Click="PriorityMenuItem_Click"/>
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="TID" Width="*" CanUserSort="False" Binding="{Binding TID}"/>
                            <DataGridTextColumn Header="{x:Static p:Resources.ProcessPropertiesWindowThreadTabStartAddressHeader}" Width="*" CanUserSort="False" Binding="{Binding StartAddress}"/>
                            <DataGridTextColumn Header="{x:Static p:Resources.ProcessPropertiesWindowThreadTabPriorityHeader}" Width="*" CanUserSort="False" Binding="{Binding Priority}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowThreadTabStartedLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,260,0,0"/>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowThreadTabKernelTimeLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,290,0,0"/>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowThreadTabUserTimeLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,321,0,0"/>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowThreadTabCyclesLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,352,0,0"/>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowThreadTabDynamicPriorityLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="384,260,0,0"/>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowThreadTabBasePriorityLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.867,5.277" Margin="384,291,0,0"/>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowThreadTabIdealProcessorLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="384,322,0,0"/>
                    <Label x:Name="StartLabel" Content="Non disponibile" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="119,260,0,0" Width="260"/>
                    <Label x:Name="KernelTimeLabel" Content="Non disponibile" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="119,291,0,0" Width="260"/>
                    <Label x:Name="UserTimeLabel" Content="Non disponibile" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="119,321,0,0" Width="260"/>
                    <Label x:Name="CyclesLabel" Content="Non disponibile" VerticalAlignment="Top" Margin="119,352,10,0"/>
                    <Label x:Name="DynamicPriorityLabel" Content="Non disponibile" VerticalAlignment="Top" Margin="494,260,10,0"/>
                    <Label x:Name="BasePriorityLabel" Content="Non disponibile" VerticalAlignment="Top" Margin="494,291,10,0"/>
                    <Label x:Name="IdealProcessorLabel" Content="Non disponibile" VerticalAlignment="Top" Margin="494,322,10,0"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="TokenTab" Header="Token">
                <Grid Background="#FFE5E5E5">
                    <Grid.Resources>
                        <Style x:Key="InformationUnavailableError" TargetType="CheckBox">
                            <Style.Triggers>
                                <Trigger Property="Validation.HasError" Value="True">
                                    <Setter Property="ToolTip" Value="{x:Static p:Resources.ProcessPropertiesWindowBindingErrorText}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowTokenTabUserLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowTokenTabUserSIDLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0"/>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowTokenTabSessionLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,72,0,0"/>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowTokenTabElevatedLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="126,72,0,0"/>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowTokenTabVirtualizationAllowedLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="306,72,0,0"/>
                    <Label Content="App container SID:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,103,0,0"/>
                    <DataGrid x:Name="GroupsDatagrid" Margin="10,134,10,0" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" VerticalAlignment="Top" Height="129" ItemsSource="{Binding Path = TokenInfo.GroupsInfo, Mode=OneWay}" SelectedCellsChanged="GroupsDatagrid_SelectedCellsChanged">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="IsHitTestVisible" Value="False"/>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn  Header="{x:Static p:Resources.ProcessPropertiesWindowTokenTabGroupNameHeader}" Binding="{Binding Name}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Header="{x:Static p:Resources.ProcessPropertiesWindowTokenTabGroupFlagsHeader}" Binding="{Binding Flags}" Width="*" CanUserSort="False"/>
                        </DataGrid.Columns>

                    </DataGrid>
                    <DataGrid x:Name="PrivilegesDatagrid" Margin="10,268,10,10" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" ItemsSource="{Binding Path = TokenInfo.PrivilegesInfo, Mode=OneWay}">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="EnablePrivilegeContextMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowTokenTabEnablePrivilegeMenuItem}" Command="{Binding EnablePrivilegeCommand}"/>
                                <MenuItem x:Name="DisablePrivilegeContextMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowTokenTabDisablePrivilegeMenuItem}" Command="{Binding DisablePrivilegeCommand}"/>
                                <MenuItem x:Name="RemovePrivilegeContextMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowTokenTabRemovePrivilegeMenuItem}" Command="{Binding RemovePrivilegeCommand}"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{x:Static p:Resources.ProcessPropertiesWindowTokenTabGroupNameHeader}" Binding="{Binding Name}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Header="{x:Static p:Resources.ProcessPropertiesWindowTokenTabPrivilegeStatusHeader}" Binding="{Binding Status}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Header="{x:Static p:Resources.ProcessPropertiesWindowTokenTabPrivilegeDescriptionHeader}" Binding="{Binding Description}" Width="*" CanUserSort="False"/>
                        </DataGrid.Columns>
