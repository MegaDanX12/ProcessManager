                    <Label Content="{Binding TokenInfo.GeneralInfo.UserSID}" VerticalAlignment="Top" Margin="83,41,10,0"/>
                    <Label Content="{Binding TokenInfo.GeneralInfo.SessionID}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="67,72,0,0" Width="54"/>
                    <Label Content="{Binding TokenInfo.GeneralInfo.AppContainerSID}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="124,103,0,0" Width="554"/>
                    <CheckBox x:Name="ElevationCheckBox" IsChecked="{Binding TokenInfo.GeneralInfo.IsElevated, Mode=OneWay, ValidatesOnExceptions=True}" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="199,78,0,0" Width="19" IsTabStop="False" Focusable="False" Click="GeneralHandler"/>
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowTokenTabVirtualizationEnabledLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="547,72,0,0"/>
                    <CheckBox x:Name="VirtualizationAllowedCheckBox" IsChecked="{Binding TokenInfo.GeneralInfo.IsVirtualizationAllowed, Mode=OneWay, ValidatesOnExceptions=True}" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="460,78,0,0" Focusable="False" IsTabStop="False" Click="GeneralHandler"/>
                    <CheckBox x:Name="VirtualizationEnabledCheckBox" IsChecked="{Binding TokenInfo.GeneralInfo.IsVirtualizationEnabled, Mode=OneWay, ValidatesOnExceptions=True}" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="693,78,0,0" Focusable="False" IsTabStop="False" Click="GeneralHandler"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="ModulesTab" Header="{x:Static p:Resources.ProcessPropertiesWindowModulesTabHeader}">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name ="ModulesDatagrid" Margin="10" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" ItemsSource="{Binding Path=ModulesInfo}">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="PEHeaderInfoContextMenuItem" Header="{x:Static p:Resources.ProcessPropertiesModulePropertiesContextMenuItem}" Command="{Binding ImageInfoCommand}"/>
                                <MenuItem x:Name="OpenFolderContextMenuItem" Header="{x:Static p:Resources.ProcessPropertiesModuleLocationContextMenuItem}" Command="{Binding OpenFolderCommand}"/>
                                <MenuItem x:Name="FilePropertiesContextMenuItem" Header="{x:Static p:Resources.ProcessPropertiesModuleFilePropertiesContextMenuItem}" Command="{Binding ShowFilePropertiesCommand}"/>
                                <MenuItem Header="{x:Static p:Resources.RefreshDataCommandText}" Command="{Binding RefreshDataCommand}" CommandParameter="Modules"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Name}" Header="{x:Static p:Resources.ProcessPropertiesWindowTokenTabGroupNameHeader}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Binding="{Binding BaseAddress}" Header="{x:Static p:Resources.ProcessPropertiesWindowModulesTabBaseAddressHeader}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Binding="{Binding Size}" Header="{x:Static p:Resources.ProcessPropertiesWindowModulesTabSizeHeader}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Binding="{Binding Description}" Header="{x:Static p:Resources.ProcessPropertiesWindowTokenTabPrivilegeDescriptionHeader}" Width="*" CanUserSort="False"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem x:Name="MemoryTab" Header="{x:Static p:Resources.ProcessPropertiesWindowMemoryTabHeader}">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="MemoryDatagrid" Margin="10" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" ItemsSource="{Binding Path = MemoryRegionsInfo}" MouseRightButtonDown="MemoryDatagrid_MouseRightButtonDown">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="ChangeProtectionMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowMemoryDatagridChangeProtectionContextMenu}">
                                    <MenuItem.Style>
                                        <Style TargetType="MenuItem">
                                            <Setter Property="IsEnabled" Value="{Binding Path=(main:Settings.AllowProcessMemoryManipulation)}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=(main:Settings.AllowProcessMemoryManipulation)}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </MenuItem.Style>
                                    <MenuItem Header="PAGE_EXECUTE" Click="ProtectionChangeHandler"/>
                                    <MenuItem Header="PAGE_EXECUTE_READ" Click="ProtectionChangeHandler"/>
                                    <MenuItem Header="PAGE_EXECUTE_READWRITE" Click="ProtectionChangeHandler"/>
                                    <MenuItem Header="PAGE_EXECUTE_WRITECOPY" Click="ProtectionChangeHandler"/>
                                    <MenuItem Header="PAGE_NOACCESS" Click="ProtectionChangeHandler"/>
                                    <MenuItem Header="PAGE_READONLY" Click="ProtectionChangeHandler"/>
                                    <MenuItem Header="PAGE_READWRITE" Click="ProtectionChangeHandler"/>
                                    <MenuItem Header="PAGE_WRITECOPY" Click="ProtectionChangeHandler"/>
                                </MenuItem>
                                <MenuItem x:Name="FreeMemoryMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowMemoryDatagridFreeMemoryContextMenu}" Command="{Binding FreeMemoryRegionCommand}">
                                    <MenuItem.Style>
                                        <Style TargetType="MenuItem">
                                            <Setter Property="IsEnabled" Value="{Binding Path=(main:Settings.AllowProcessMemoryManipulation)}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=(main:Settings.AllowProcessMemoryManipulation)}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </MenuItem.Style>
                                </MenuItem>
                                <MenuItem x:Name="DecommitMemoryMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowMemoryDatagridDecommitMemoryContextMenu}" Command="{Binding DecommitMemoryRegionCommand}"/>
                                <MenuItem Header="{x:Static p:Resources.RefreshDataCommandText}" Command="{Binding RefreshDataCommand}" CommandParameter="Memory">
                                    <MenuItem.Style>
                                        <Style TargetType="MenuItem">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding (main:Settings.DataSource)}">
                                                    <DataTrigger.Value>
                                                        <main:ProcessDataSource>ETW</main:ProcessDataSource>
                                                    </DataTrigger.Value>
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </MenuItem.Style>
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding BaseAddress}" Header="{x:Static p:Resources.ProcessPropertiesWindowModulesTabBaseAddressHeader}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Binding="{Binding PagesType}" Header="{x:Static p:Resources.ProcessPropertiesWindowMemoryTabTypeHeader}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Binding="{Binding PagesState}" Header="{x:Static p:Resources.ProcessPropertiesWindowMemoryTabStateHeader}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Binding="{Binding Size}" Header="{x:Static p:Resources.ProcessPropertiesWindowModulesTabSizeHeader}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Binding="{Binding InitialProtection}" Header="{x:Static p:Resources.ProcessPropertiesWindowMemoryTabInitialProtectionHeader}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Binding="{Binding CurrentProtection}" Header="{x:Static p:Resources.ProcessPropertiesWindowMemoryTabCurrentProtectionHeader}" Width="Auto" CanUserSort="False"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem x:Name="HandleTab" Header="Handle">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="HandlesDatagrid" Margin="10" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" ItemsSource="{Binding Path = HandlesInfo}" MouseRightButtonDown="HandlesDatagrid_MouseRightButtonDown">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem x:Name="CloseHandleMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowHandleCloseMenuItem}" Command="{Binding CloseHandleCommand}"/>
                                <MenuItem x:Name="HandlePropertiesMenuItem" Header="{x:Static p:Resources.ProcessPropertiesWindowHandlePropertiesMenuItem}" Command="{Binding ShowHandlePropertiesCommand}"/>
                                <MenuItem Header="{x:Static p:Resources.RefreshDataCommandText}" Command="{Binding RefreshDataCommand}" CommandParameter="Handles"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Type}" Header="{x:Static p:Resources.ProcessPropertiesWindowMemoryTabTypeHeader}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Binding="{Binding Name}" Header="{x:Static p:Resources.ProcessPropertiesWindowTokenTabGroupNameHeader}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Binding="{Binding Value}" Header="Handle" Width="*" CanUserSort="False"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem x:Name="NetPerformanceTab" Header="{x:Static p:Resources.ProcessPropertiesWindowNetPerformanceTabHeader}">
                <Grid Background="#FFE5E5E5">
                    <Label Content="{x:Static p:Resources.ProcessPropertiesWindowNetPerformanceTabCategoriesLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
                    <ComboBox x:Name="CategoriesComboBox" VerticalAlignment="Top" Margin="79,14,10,0" IsReadOnly="True" SelectionChanged="CategoriesComboBox_SelectionChanged">
                        <ComboBox.Items>
                            <ComboBoxItem Content="{x:Static p:Resources.ProcessPropertiesWindowNetPerformanceTabNetExceptionsCategory}"/>
                            <ComboBoxItem Content="{x:Static p:Resources.ProcessPropertiesWindowNetPerformanceTabNetInteropCategory}"/>
                            <ComboBoxItem Content="{x:Static p:Resources.ProcessPropertiesWindowNetPerformanceTabNetJITCategory}"/>
                            <ComboBoxItem Content="{x:Static p:Resources.ProcessPropertiesWindowNetPerformanceTabNetLoadingCategory}"/>
                            <ComboBoxItem Content="{x:Static p:Resources.ProcessPropertiesWindowNetPerformanceTabNetLocksAndThreadsCategory}"/>
                            <ComboBoxItem Content="{x:Static p:Resources.ProcessPropertiesWindowNetPerformanceTabNetMemoryCategory}"/>
                            <ComboBoxItem Content="{x:Static p:Resources.ProcessPropertiesWindowNetPerformanceTabNetNetworkingCategory}"/>
                            <ComboBoxItem Content="{x:Static p:Resources.ProcessPropertiesWindowNetPerformanceTabNetSecurityCategory}"/>
                        </ComboBox.Items>
                    </ComboBox>
                    <DataGrid x:Name="CountersDataGrid" Margin="10,41,10,10" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True" SelectedCellsChanged="GroupsDatagrid_SelectedCellsChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Key}" Header="{x:Static p:Resources.ProcessPropertiesWindowNetPerformanceTabCounterHeader}" Width="*" CanUserSort="False"/>
                            <DataGridTextColumn Binding="{Binding Value}" Header="{x:Static p:Resources.ProcessPropertiesWindowNetPerformanceTabValueHeader}" Width="*" CanUserSort="False"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
