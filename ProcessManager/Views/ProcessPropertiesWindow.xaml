                            <Label Content="{Binding Statistics.Memory.WorkingSetSize}" VerticalAlignment="Top" Margin="134,143,90,0"/>
                            <Label Content="{Binding Statistics.Memory.PrivateBytes}" VerticalAlignment="Top" Margin="134,171,10,0"/>
