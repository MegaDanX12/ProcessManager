                            <Label Content="{Binding Statistics.Memory.PrivateBytes}" Margin="134,10,10,0" VerticalAlignment="Top"/>
                            <Label Content="{Binding Statistics.Memory.PeakPrivateBytes}" VerticalAlignment="Top" Margin="134,36,10,0"/>
                            <Label Content="{Binding Statistics.Memory.VirtualSize}" VerticalAlignment="Top" Margin="134,62,10,0"/>
                            <Label Content="{Binding Statistics.Memory.PeakVirtualSize}" VerticalAlignment="Top" Margin="134,88,10,0"/>
